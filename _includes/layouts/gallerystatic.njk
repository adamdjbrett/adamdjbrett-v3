---
layout: layouts/base.njk
---
<header class="container-fluid">
<div class="col-md-9 mx-auto p-3 mts">
<h1 class="header_title"><strong><a href="{{page.url}}">{{header}}</a></strong></h1>
<h2 class="lead mt-3">{{description}}</h2>
</div>
</header>



<div class="p-3 col-md-10 mx-auto">
<div class="row">

{% for img in "galleries/*.{gif,jpg,jpeg,png,webp,avif}" | galleries %}
<div class="col-md-2 p-1">
<a href="{{metadata.url}}/{{ img | replace('/', '/') }}">
<img class="img-fluid zoom" alt="{{metadata.title}}"
style="
width:100%;
height:200px;
object-fit:cover;
"
src="{{ img | replace('/', '/') }}" />
</a>
</div>

{%- endfor %}
</div>

{{content|safe}}

</div>