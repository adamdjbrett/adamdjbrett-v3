---
layout: layouts/base.njk
---
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}
{% include "widget/project/header_posts.njk" %}

<article class="container-fluid">
<div class="p-3 col-md-7 mx-auto">
{% if description %}<h2 class="p-3 mb-3">{{description}}</h2>{% endif %}
<div class="p-3 mb-3">
<p>
<a href="{{metadata.url}}" class="info me-3">Home</a> /
<a href="{{metadata.project.link}}" class="info me-3">{{metadata.project.breadcumb}}</a> /
<span class="ms-3">{{title}}</span>
</p>
</div>
</div>
{% if image %}
<div class="p-3 col-md-10 mx-auto text-center">
<a href="#" data-bs-toggle="modal" data-bs-target="#imageProjectModal">
<img class="img-fluid mb-5 img-dos" loading="eager" alt="{{title}}" src="https://wsrv.nl/?url={{metadata.url}}{{image}}&w=600&output=webp"/>
</a></div>
<div class="modal fade" id="imageProjectModal" 
tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog modal-xl">
<div class="modal-content glass-dark">
<div class="modal-header">
<h1 class="modal-title fs-5" id="imageProjectModalLabel">{{title}}</h1>
<button type="button" class="btn-close glass text-white" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x"></i></button>
</div>
<div class="modal-body">
<img class="img-fluid mb-5" width="100%" height="100%" loading="eager" alt="{{title}}" src="https://wsrv.nl/?url={{metadata.url}}{{image}}&w=800&output=webp"/>
</div>
</div>
</div>
{% endif %}
</div>
<div class="p-3 col-md-7 mx-auto">
{% if content | toc %}
<div class="p-3">
<p>Table Of Content</p>
<aside>
{{ content | toc | safe }}
</aside>
</div>
{% endif %}
{{content|safe}}
<p class="mt-3">
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag" viewBox="0 0 16 16">
<path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0"/>
<path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1m0 5.586 7 7L13.586 9l-7-7H2z"/>
</svg> Tags : 
{%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a href="{{ tagUrl }}" class="p-1 tags me-1 posts info">{{tag}}</a>
{%- endfor %}
</p>
{% include "widget/blog/shared.njk" %}
</div>
</article>
{% include "widget/project/project_pagination.njk" %}