{%- if collections.projects %}
{%- set previousPost = collections.projects | getPreviousCollectionItem %}
{%- set nextPost = collections.projects | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="p-3 col-md-9 mx-auto">
<div class="row">
<div class="col-md-6 p-3 mb-3 mt-5">
{%- if previousPost %}
{% if previousPost.data.image %}
<a href="{{ previousPost.url }}" title="{{ previousPost.data.title }}"><img class="img-fluid img-post mb-3" alt="{{ previousPost.data.title }}" loading="lazy" width="100%" height="100%" src="https://wsrv.nl/?url={{metadata.url}}{{ previousPost.data.image }}&w=500&output=webp"/></a>{% endif %}
<a href="{{ previousPost.url }}" title="{{ previousPost.data.title }}" class="p-3 mb-3 info"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5"/>
</svg> {{ previousPost.data.title }}
</a>
{% endif %}
</div>
{%- if nextPost %}
<div class="col-md-6 p-3 mb-3 mt-5 text-end">
{% if nextPost.data.image %}
<a href="{{ nextPost.url }}" title="{{ nextPost.data.title }}"><img class="img-fluid img-post mb-3" alt="" width="100%" height="100%" loading="lazy" src="https://wsrv.nl/?url={{metadata.url}}{{ nextPost.data.image }}&w=500&output=webp"/></a>
{% endif %}
<a href="{{ nextPost.url }}" title="{{ nextPost.data.title }}" class="p-3 mb-3 info">{{ nextPost.data.title }}  
<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-right-short" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>
</svg>
</a>
{% endif %}
</div>
</div>
</div>
{%- endif %}
{%- endif %}